RadHydroInitialFractionHeII  = 0.0
RadHydroInitialFractionHeIII = 0.0
ClumpCenter = 5.0 3.3 3.3
ClumpRadius = 0.8
#
# Radiation boundary conditions
# 
AMRFLDRadiationBoundaryX0 = 2 1         // Neumann/Dirichlet
AMRFLDRadiationBoundaryX1 = 0 0         // periodic
AMRFLDRadiationBoundaryX2 = 0 0
#
# General module and solver parameters
# 
AMRFLDAutomaticScaling = 0              // disable automatic scaling
AMRFLDLimiterRmin      = 1.0e-2         // module default
AMRFLDLimiterDmax      = 1.0e-2         // module default
