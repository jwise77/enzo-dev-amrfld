#=======================================================================

MACH_TEXT  = NASA GSFC Discover
MACH_VALID = 1
MACH_FILE  = Make.mach.nasa-discover

#-----------------------------------------------------------------------
# Commands to run test executables
#-----------------------------------------------------------------------


#-----------------------------------------------------------------------
# Install paths (local variables)
#-----------------------------------------------------------------------

LOCAL_PACKAGES       = /home/jhwise/local

LOCAL_MPI_INSTALL    = /usr/local/intel/mpi/3.2.2.006
#LOCAL_MPI_INSTALL    = /usr/local/other/mvapich2/1.4.1_intel-11.1.056
LOCAL_FC_INSTALL     = /usr/local/intel/Compiler/11.1/056/
LOCAL_MKL_INSTALL     = /usr/local/intel/mkl/10.1.2.024
LOCAL_HDF5_INSTALL   = /home/jhwise/local/hdf5/1.8.4s
LOCAL_JEMALLOC_INSTALL   = /home/jhwise/local
#LOCAL_FC_INSTALL     = /usr/local/intel/fc/10.1.023
#LOCAL_HDF5_INSTALL   = /home/jhwise/local/hdf5/1.8.4s_intel10
LOCAL_HDF4_INSTALL   = /home/jhwise/local/hdf4
LOCAL_SZIP_INSTALL   = $(LOCAL_PACKAGES)
LOCAL_HYPRE_INSTALL  = $(HOME)
LOCAL_JBPERF_INSTALL = 
LOCAL_PNG_INSTALL    = $(LOCAL_PACKAGES)

#-----------------------------------------------------------------------
# Compiler settings
#-----------------------------------------------------------------------

MACH_CPP       = /usr/bin/cpp

# With MPI

MACH_CC_MPI    = $(LOCAL_MPI_INSTALL)/bin/mpiicc
MACH_CXX_MPI   = $(LOCAL_MPI_INSTALL)/bin/mpiicpc
MACH_FC_MPI    = $(LOCAL_MPI_INSTALL)/bin/mpiifort
MACH_F90_MPI   = $(LOCAL_MPI_INSTALL)/bin/mpiifort
MACH_LD_MPI    = $(LOCAL_MPI_INSTALL)/bin/mpiicpc

# Without MPI

MACH_CC_NOMPI  = icc  # C compiler when not using MPI
MACH_CXX_NOMPI = icpc # C++ compiler when not using MPI
MACH_FC_NOMPI  = ifort # Fortran 77 compiler when not using MPI
MACH_F90_NOMPI = ifort # Fortran 90 compiler when not using MPI
MACH_LD_NOMPI  = icpc # Linker when not using MPI

#-----------------------------------------------------------------------
# Machine-dependent defines
#-----------------------------------------------------------------------

# Note: When compiling against HDF5 version 1.8 or greater, you need to
# compile HDF5 with --with-default-api-version=v16, or Enzo with
# -DH5_USE_16_API.

MACH_DEFINES   = -DLINUX -DH5_USE_16_API -DOPTIMIZED_CTP -DNO_IO_LOG \
		 -DSINGLE_HDF5_OPEN_ON_INPUT_OFF -DMEMORY_POOL_OFF \
		 -DMEM_TRACE_OFF -DUSE_JEMALLOC_OFF -DUSE_MKL

#-----------------------------------------------------------------------
# Compiler flag settings
#-----------------------------------------------------------------------

MACH_CPPFLAGS = -P -traditional 
MACH_CFLAGS   = 
MACH_CXXFLAGS =
MACH_FFLAGS   = -132
MACH_F90FLAGS = 
MACH_LDFLAGS  = 
MACH_OPENMP   = -openmp# -mt_mpi

#-----------------------------------------------------------------------
# Precision-related flags
#-----------------------------------------------------------------------

MACH_FFLAGS_INTEGER_32 = -i4
MACH_FFLAGS_INTEGER_64 = -i8
MACH_FFLAGS_REAL_32    = -r4
MACH_FFLAGS_REAL_64    = -r8

#-----------------------------------------------------------------------
# Optimization flags
#-----------------------------------------------------------------------

MACH_OPT_WARN        = -Wall -g
MACH_OPT_DEBUG       = -g
MACH_OPT_HIGH_C        = -O1 -ftz -mieee-fp -fp-speculation=off -prec-sqrt -prec-div
MACH_OPT_HIGH_F        = -O1 -ftz -mieee-fp -fp-speculation=off -prec-sqrt -prec-div
MACH_OPT_HIGH        = -O2 -g
#MACH_OPT_HIGH        = -O2 -ftz -mp
MACH_OPT_AGGRESSIVE  = -ipo -O3 -prof-use -prof-dir /home/jhwise/codes/opt-prof
#MACH_OPT_AGGRESSIVE  = -O3 -ipo -prof-gen -prof-dir /home/jhwise/codes/opt-prof

#-----------------------------------------------------------------------
# Includes
#-----------------------------------------------------------------------

LOCAL_INCLUDES_MPI    = -I$(LOCAL_MPI_INSTALL)/include64
LOCAL_INCLUDES_HDF5   = -I$(LOCAL_HDF5_INSTALL)/include
LOCAL_INCLUDES_HDF4   = -I$(LOCAL_HDF4_INSTALL)/include
#LOCAL_INCLUDES_JEMALLOC   = -I$(LOCAL_JEMALLOC_INSTALL)/include
LOCAL_INCLUDES_HYPRE  = 
LOCAL_INCLUDES_JBPERF = 
LOCAL_INCLUDES_MKL    = -I$(LOCAL_MKL_INSTALL)/include
LOCAL_INCLUDES_PAPI   = # PAPI includes

MACH_INCLUDES         = $(LOCAL_INCLUDES_JEMALLOC) $(LOCAL_INCLUDES_HDF5) $(LOCAL_INCLUDES_MKL)

MACH_INCLUDES_MPI     = $(LOCAL_INCLUDES_MPI)
MACH_INCLUDES_HYPRE   = $(LOCAL_INCLUDES_HYPRE)
MACH_INCLUDES_JBPERF  = $(LOCAL_INCLUDES_JBPERF)


#-----------------------------------------------------------------------
# Libraries
#-----------------------------------------------------------------------

LOCAL_LIBS_MACH  = -L$(LOCAL_FC_INSTALL)/lib/intel64 -lifcore -lifport -lsvml
#LOCAL_LIBS_HDF5  =  -L$(LOCAL_HDF5_INSTALL)/lib -lhdf5 -lsz
LOCAL_LIBS_HDF5  =  -L$(LOCAL_HDF5_INSTALL)/lib -L$(HOME)/local/lib \
	-lhdf5 -lsz -lz
LOCAL_LIBS_HDF4  =  -L$(LOCAL_HDF5_INSTALL)/lib -lm -lmfhdf -lz -ldf -ljpeg
LOCAL_LIBS_MKL   =  -L$(LOCAL_MKL_INSTALL)/lib -lmkl_core -lmkl_intel_ilp64 \
	-lmkl_intel_thread -liomp5 -lpthread
#LOCAL_LIBS_JEMALLOC  =  -L$(LOCAL_JEMALLOC_INSTALL)/lib -ljemalloc

MACH_LIBS        = $(LOCAL_LIBS_HDF5) $(LOCAL_LIBS_JEMALLOC) $(LOCAL_LIBS_MACH) $(LOCAL_LIBS_MKL)
MACH_LIBS_MPI    = $(LOCAL_LIBS_MPI)
MACH_LIBS_HYPRE  = $(LOCAL_LIBS_HYPRE)
MACH_LIBS_JBPERF = $(LOCAL_LIBS_JBPERF)
MACH_LIBS_PAPI    = $(LOCAL_LIBS_PAPI)

