#
# Specify radiation field(s) to use in solver
#
AMRFLDNumRadiationFields = 3
AMRFLDFrequencyBand[0] = 13.6 24.6
AMRFLDFrequencyBand[1] = 24.6 54.4
AMRFLDFrequencyBand[2] = 54.4 200.0
AMRFLDRadiationScaling[0] = 1.0e1       // solver scaling factor 
AMRFLDRadiationScaling[1] = 1.0e1       // solver scaling factor 
AMRFLDRadiationScaling[2] = 1.0e1       // solver scaling factor 
#
# Specify radiation source(s) to use in solver
#
AMRFLDNumSources = 0                    // source built-in for ProblemType
#
# Problem-specific initialization parameters
# 
RadHydroVelocity             = 0.0 0.0 0.0
RadHydroNumDensityIn         = 4.0e-2
RadHydroNumDensityOut        = 2.0e-4
RadHydroChemistry            = 1
