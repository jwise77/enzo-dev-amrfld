#=======================================================================
#
# FILE:        Make.mach.ncsa-bluewaters-cray
#
# DESCRIPTION: Makefile settings for NCSA's Blue Waters w/GNU
#
# AUTHOR:      Daniel R. Reynolds
#
# DATE:        2014-10-27
# MODIFIED1:   
#
#=======================================================================

MACH_TEXT  = NCSA Blue Waters
MACH_VALID = 1
MACH_FILE  = Make.mach.ncsa-bluewaters-cray

MACHINE_NOTES = "\nIn addition to the default modules, you should\
 also load cray-hdf5 and hypre:\n   module load cray-hdf5 hypre\n"

#-----------------------------------------------------------------------
# Commands to run test executables
#-----------------------------------------------------------------------


#-----------------------------------------------------------------------
# Install paths (local variables)
#-----------------------------------------------------------------------

LOCAL_MPI_INSTALL    = 
LOCAL_HDF5_INSTALL   = ${HDF5_DIR}

#-----------------------------------------------------------------------
# Compiler settings
#-----------------------------------------------------------------------

MACH_CPP       = cpp 

# With MPI

MACH_CC_MPI    = cc
MACH_CXX_MPI   = CC
MACH_FC_MPI    = ftn
MACH_F90_MPI   = ftn
MACH_LD_MPI    = CC

# Without MPI

MACH_CC_NOMPI  = cc
MACH_CXX_NOMPI = CC
MACH_FC_NOMPI  = ftn
MACH_F90_NOMPI = ftn
MACH_LD_NOMPI  = CC

#-----------------------------------------------------------------------
# Machine-dependent defines
#-----------------------------------------------------------------------

MACH_DEFINES   = -DNO_IO_LOG -DH5_USE_16_API -DLINUX -DUSE_MPI -DMPICH_IGNORE_CXX_SEEK -DMEM_TRACE -DUSE_FFTE_FFT

#-----------------------------------------------------------------------
# Compiler flag settings
#-----------------------------------------------------------------------

MACH_CPPFLAGS = -traditional
MACH_CFLAGS   = -h noomp
MACH_CXXFLAGS = -h noomp
MACH_FFLAGS   = -h noomp -N 132
MACH_F90FLAGS = -h noomp
MACH_LDFLAGS  = 

#-----------------------------------------------------------------------
# Precision-related flags
#-----------------------------------------------------------------------

MACH_FFLAGS_INTEGER_32 = -s integer32
MACH_FFLAGS_INTEGER_64 = -s integer64
MACH_FFLAGS_REAL_32    = -s real32
MACH_FFLAGS_REAL_64    = -s real32

#-----------------------------------------------------------------------
# Optimization flags
#-----------------------------------------------------------------------

MACH_OPT_WARN        = 
MACH_OPT_DEBUG       = -g
MACH_OPT_HIGH        = -O2
MACH_OPT_AGGRESSIVE  = -O3

#-----------------------------------------------------------------------
# Includes
#-----------------------------------------------------------------------

LOCAL_INCLUDES_MPI    = 
LOCAL_INCLUDES_HDF5   = -I$(LOCAL_HDF5_INSTALL)/include
LOCAL_INCLUDES_HYPRE  = 

MACH_INCLUDES         = $(LOCAL_INCLUDES_HDF5)
MACH_INCLUDES_MPI     = $(LOCAL_INCLUDES_MPI)
MACH_INCLUDES_HYPRE   = ${HYPRE_INC}

#-----------------------------------------------------------------------
# Libraries
#-----------------------------------------------------------------------
#

LOCAL_LIBS_MPI    = 
LOCAL_LIBS_HDF5   = -L$(LOCAL_HDF5_INSTALL)/lib -lhdf5 -lz
LOCAL_LIBS_HYPRE  = 

LOCAL_LIBS_MACH   = 

MACH_LIBS         = $(LOCAL_LIBS_HDF5) $(LOCAL_LIBS_MACH)
MACH_LIBS_MPI     = $(LOCAL_LIBS_MPI)
MACH_LIBS_HYPRE   = $(HYPRE_LIB)
