RadHydroTemperature      = 1.0e2          // temperature (K)
RadHydroRadiationEnergy  = 1.0e-30        // radiation energy (erg/cm^3)
NGammaDot                = 5.0e48         // ionization rate (photons/sec)
EtaRadius                = 1.0e0          // source radius (in cells)
